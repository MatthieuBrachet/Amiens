function [f,fp] = initial_fun(x,y,z)
global barx bary barz
global test

if test ==1
    f=(abs(x-0.5)<0.1).*(abs(y-0.5)<1).*(abs(z-0.5)<.1);
elseif test == 2
    Gradius=0.8:
    Pradius=0.1;
    a=4*pi;
    [n1,n2,n3]=size(x);
    
    t=0:0.001:1;
    M=[G]
    
    
    
end
f=2*f-1;
ind=indicatrice(x,y,z,barx,bary,barz);
fp=f.*(ind);